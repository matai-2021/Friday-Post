{
  "name": "friday-post",
  "version": "1.0.0",
  "description": "Team Post create a make-a-card site for mobile",
  "repository": "https://github.com/matai-2021/Friday-Post.git",
  "main": "server/index.js",
  "author": "Keisuke, Westley, James, Eleanor",
  "license": "ISC",
  "scripts": {
    "start": "run-p webpack server",
    "dev": "run-p client server",
    "client": "webpack --watch --config client/webpack.config.js",
    "server": "nodemon --watch server",
    "webpack": "webpack --config client/webpack.config.js",
    "lint": "eslint --ext .js,.jsx .",
    "knex": "knex --knexfile server/db/knexfile.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "eda",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "7.9.0",
    "eslint-config-eda": "0.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "superagent": "^6.1.0",
    "webpack": "^5.10.3",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@babel/register": "^7.12.10",
    "express": "^4.17.1",
    "knex": "^0.21.13",
    "sqlite3": "^5.0.0"
  }
}
